@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = null;

    var currentPage = Umbraco.AssignedContentItem; 
    var showPartialView = currentPage?.Value<string>("showPartialView");   
}

<!DOCTYPE html>
<html lang="sv-se">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://kit.fontawesome.com/a576612222.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/theme.css">
    <title></title>
</head>
<body>
    <div class="wrapper">
        @Html.Partial("Header")        

		<main>
            @if (showPartialView == "Top")
            {
                @await Html.PartialAsync("components/_LetUsKnowSection");
            }

			@RenderBody()

            @if (showPartialView == "Bottom")
            {
                @await Html.PartialAsync("components/_LetUsKnowSection");
            }
        </main>

        @Html.Partial("Footer")

	</div>

	<script src="/scripts/main.js"></script>
</body>